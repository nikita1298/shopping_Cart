<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2> User Profile </h2>
        <hr>
        <h3>My Orders</h3>
        {{#each orders}}
        <div class="panel panel-default">
            <div class="panel-heading"><strong> Order Date :</strong>{{this.orderdate}}</div>
  
            <div class="panel-body">
                
                <ul class="list-group">

                    {{#each this.items}}
                    <li class="list-group-item">
                        <img style="height:39px;width:39px" src="{{this.item.imagePath}}">
                        <span class="badge">₹ {{this.price}}</span>
                        {{this.item.title}} | {{this.qty}} Units
                           </li>
                    {{/each }}
                </ul>
            </div>
            <div class="panel-footer"><strong>Total Order Amount :  ₹ {{this.cart.totalPrice}}</strong></div>
        </div>{{/each}}
    </div>
</div>